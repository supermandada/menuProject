.container {
  min-height: 100vh;
  background: #F8F8F8;
  padding-bottom: 120rpx;
}

/* 空购物车样式 */
.empty-cart {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 200rpx;
}

.empty-cart image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
}

.empty-cart text {
  color: #999;
  font-size: 28rpx;
  margin-bottom: 40rpx;
}

.go-shopping {
  background: #FF6B6B;
  color: #fff;
  font-size: 28rpx;
  padding: 20rpx 60rpx;
  border-radius: 30rpx;
}

/* 购物车列表样式 */
.cart-list {
  padding: 20rpx;
}

.cart-item {
  display: flex;
  background: #fff;
  padding: 20rpx;
  margin-bottom: 20rpx;
  border-radius: 12rpx;
}

.dish-image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
}

.dish-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.dish-name {
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
}

.dish-price {
  font-size: 36rpx;
  color: #FF6B6B;
  font-weight: bold;
}

.dish-action {
  display: flex;
  align-items: center;
}

.minus, .plus {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
}

.minus {
  background: #fff;
  border: 2rpx solid #ddd;
  color: #666;
}

.plus {
  background: #FF6B6B;
  color: #fff;
}

.count {
  margin: 0 20rpx;
  font-size: 28rpx;
  color: #333;
}

/* 底部结算栏样式 */
.checkout-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 100rpx;
  background: #fff;
  display: flex;
  align-items: center;
  padding: 0 30rpx;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.total-info {
  flex: 1;
}

.total-price {
  font-size: 36rpx;
  color: #FF6B6B;
  font-weight: bold;
}

.total-desc {
  font-size: 24rpx;
  color: #999;
  margin-top: 4rpx;
}

.checkout-btn {
  background: #FF6B6B;
  color: #fff;
  font-size: 28rpx;
  padding: 20rpx 60rpx;
  border-radius: 30rpx;
  margin: 0;
} 