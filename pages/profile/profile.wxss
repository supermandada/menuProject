/* pages/profile/profile.wxss */
.container {
  min-height: 100vh;
  background: #F8F8F8;
}
.profile-bg {
  width: 100vw;
  height: 320rpx;
  background: linear-gradient(135deg, #FFB199 0%, #FF6B6B 100%);
  display: flex;
  align-items: flex-end;
  justify-content: center;
}
.user-info {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-bottom: 32rpx;
  padding-top: 48rpx;
}
.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 6rpx solid #fff;
  box-shadow: 0 4rpx 16rpx rgba(255,107,107,0.15);
  margin-bottom: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 56rpx;
  color: #FF6B6B;
  background: #fff;
  font-weight: bold;
}
.avatar-placeholder {
  background: #fff;
}
.nickname {
  font-size: 34rpx;
  color: #fff;
  font-weight: bold;
  margin-bottom: 8rpx;
}
.subtitle {
  font-size: 24rpx;
  color: #fff;
  opacity: 0.85;
}

.profile-card {
  margin: 24rpx 32rpx 0 32rpx;
  background: #fff;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 24rpx rgba(0,0,0,0.06);
  padding: 0 0 0 0;
}
.profile-list {
  display: flex;
  flex-direction: column;
}
.profile-item {
  display: flex;
  align-items: center;
  padding: 36rpx 32rpx;
  border-bottom: 1rpx solid #f0f0f0;
  position: relative;
  background: #fff;
  transition: background 0.2s;
}
.profile-item:last-child {
  border-bottom: none;
}
.icon {
  width: 48rpx;
  height: 48rpx;
  margin-right: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  color: #FF6B6B;
  background: #FFECEC;
  border-radius: 12rpx;
  font-weight: bold;
}
.icon-placeholder {
  background: #FFECEC;
}
.arrow {
  width: 28rpx;
  height: 28rpx;
  position: absolute;
  right: 32rpx;
  top: 50%;
  transform: translateY(-50%);
  opacity: 0.4;
  font-size: 36rpx;
  color: #bbb;
  display: flex;
  align-items: center;
  justify-content: center;
}
.profile-item text {
  font-size: 30rpx;
  color: #333;
}
.item-hover {
  background: #f7f7f7 !important;
}