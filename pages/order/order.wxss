/* pages/order/order.wxss */
.container {
  min-height: 100vh;
  background: #F8F8F8;
}

.order-tabs {
  display: flex;
  background: #fff;
  padding: 20rpx 0;
  border-bottom: 2rpx solid #f0f0f0;
}
.tab {
  flex: 1;
  text-align: center;
  font-size: 28rpx;
  color: #666;
  padding: 20rpx 0;
  position: relative;
}
.tab.active {
  color: #FF6B6B;
  font-weight: bold;
}
.tab.active::after {
  content: '';
  position: absolute;
  left: 50%;
  bottom: 0;
  transform: translateX(-50%);
  width: 60rpx;
  height: 4rpx;
  background: #FF6B6B;
  border-radius: 2rpx;
}
.order-list {
  padding: 24rpx 24rpx 0 24rpx;
}
.order-card {
  background: #fff;
  border-radius: 18rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 4rpx 24rpx rgba(255,107,107,0.06);
  padding: 24rpx 24rpx 18rpx 24rpx;
  display: flex;
  flex-direction: column;
}
.order-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 26rpx;
  color: #999;
  margin-bottom: 10rpx;
}
.order-status {
  font-size: 24rpx;
  padding: 4rpx 18rpx;
  border-radius: 20rpx;
  margin-left: 12rpx;
  font-weight: bold;
}
.status-pending {
  background: #FFF3E0;
  color: #FF9800;
}
.status-done {
  background: #E0F8E9;
  color: #4CAF50;
}
.order-body {
  display: flex;
  flex-wrap: wrap;
  margin-bottom: 10rpx;
  gap: 16rpx 0;
}
.dish-info {
  display: flex;
  align-items: center;
  margin-right: 36rpx;
  margin-bottom: 8rpx;
}
.dish-thumb {
  width: 48rpx;
  height: 48rpx;
  border-radius: 8rpx;
  background: #FFECEC;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  margin-right: 10rpx;
}
.dish-detail {
  display: flex;
  flex-direction: column;
}
.dish-name {
  font-size: 28rpx;
  color: #333;
}
.dish-count {
  font-size: 24rpx;
  color: #999;
}
.order-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 8rpx;
}
.order-total {
  font-size: 30rpx;
  color: #FF6B6B;
  font-weight: bold;
}
.order-btn {
  background: #FF6B6B;
  color: #fff;
  font-size: 26rpx;
  padding: 12rpx 44rpx;
  border-radius: 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(255,107,107,0.10);
  margin-left: 16rpx;
}
.empty-order {
  text-align: center;
  color: #bbb;
  font-size: 28rpx;
  margin-top: 100rpx;
}